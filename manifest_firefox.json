{
    "manifest_version": 2,
    "name": "Copy Scope Links",
    "version": "1.0",
    "description": "Adds an option to copy all in scope links on a webpage.",
    "permissions": [
        "activeTab",
        "tabs",
        "https://platform.synack.com/*"
    ],
    "browser_action": {
        "default_popup": "popup_firefox.html",
        "default_icon": {
            "16": "icons/grey/icon16_grey.png",
            "48": "icons/grey/icon48_grey.png",
            "128": "icons/grey/icon128_grey.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "scripts": ["background_firefox.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://platform.synack.com/targets/*/scope"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}